<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%style{%d{yyyy-MM-dd HH:mm:ss}}{black} %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{1.}}{bright,yellow}: %msg%n"/>
    </Console>
    <RollingFile name="RollingFile"
    	fileName="./logs/giasuomt.log"
    	filePattern="./logs/$${date:yyyy-MM}/giasuomt-app-log-%d{yyyy-MM-dd}-%i.log"
    >
    	<PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level ${PID:- } --- %c{1.} - %msg%n"/>
    	<Policies>
    		<OnStartupTriggeringPolicy />
    		<SizeBasedTriggeringPolicy size="20MB" />
    	</Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="error">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
    <Logger name="org.springframework" level="debug" ></Logger>
    <Logger name="giasuomt.backend.api" level="debug" ></Logger>
  </Loggers>
</Configuration>